{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "types": ["node", "@netlify/functions"]
  },
  "include": [
    "db/**/*.ts",
    "netlify/functions/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
